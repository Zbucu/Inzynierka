<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/active_drill_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <!-- Your main content layout -->

    <TextView
        android:id="@+id/drill_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Drill_name"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/text_view_made_taken_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Made/Taken"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/drill_name"
        android:textColor="#888888"


        />

    <LinearLayout
        android:id="@+id/shot_counter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_made_taken_label"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/shot_made_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="/"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/shot_taken_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shot_counter_layout"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/end_drill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Drill" />

    </LinearLayout>

</RelativeLayout>
