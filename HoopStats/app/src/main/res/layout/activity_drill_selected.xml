<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_drill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintBottom_toTopOf="@id/button_start_drill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view_drill_icon"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_launcher_background"
                />

            <TextView
                android:id="@+id/text_view_drill_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image_view_drill_icon"
                android:layout_toEndOf="@id/image_view_drill_icon"
                android:text="Drill Name"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/item_drill_type_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_drill_name"
                android:layout_toEndOf="@id/image_view_drill_icon"
                >
                <TextView
                    android:id="@+id/text_view_last_done_label"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#888888"
                    android:text="Last Done"
                    />

                <TextView
                    android:id="@+id/text_view_percentage_label"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#888888"
                    android:text="Percentage"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_drill_type_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_drill_type_labels"
                android:layout_toEndOf="@id/image_view_drill_icon"
                >

                <TextView
                    android:id="@+id/text_view_last_done"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"

                    android:text="01.01.2000" />

                <TextView
                    android:id="@+id/text_view_percentage"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    android:text="43%"
                    />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button_start_drill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Drill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_drill"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="12dp"
                />

    <LinearLayout
        android:id="@+id/date_picker_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_start_drill"
        android:gravity="center_horizontal"
        >


    <EditText
        android:id="@+id/edit_text_date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Start Date"
        android:focusable="false"
        android:layout_marginEnd="8dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            />

    <EditText
        android:id="@+id/edit_text_date_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="End Date"
        android:focusable="false"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

    <ImageButton
        android:id="@+id/button_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icons8_refresh"
        app:tint="#6750a4"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="refresh"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_drill_sessions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/date_picker_actions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>