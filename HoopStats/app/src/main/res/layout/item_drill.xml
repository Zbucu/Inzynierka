<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_drill_icon"
            android:layout_width="94dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_launcher_background"
             />

        <TextView
            android:id="@+id/text_view_drill_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_view_drill_icon"
            android:layout_toEndOf="@id/image_view_drill_icon"
            android:text="Drill Name"
            android:gravity="center_horizontal"
            android:textStyle="bold"
             />

        <LinearLayout
            android:id="@+id/item_drill_type_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_drill_name"
            android:layout_toEndOf="@id/image_view_drill_icon"
            >
        <TextView
            android:id="@+id/text_view_last_done_label"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#888888"
            android:text="Last Done"
            />

        <TextView
            android:id="@+id/text_view_percentage_label"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#888888"
            android:text="Percentage"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_drill_type_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_drill_type_labels"
            android:layout_toEndOf="@id/image_view_drill_icon"
            >

            <TextView
                android:id="@+id/text_view_last_done"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"

                android:gravity="center_horizontal"

                android:text="01.01.2000" />

            <TextView
            android:id="@+id/text_view_percentage"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            android:text="43%"
             />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>